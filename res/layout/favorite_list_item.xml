<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <ImageView
        android:id="@+id/favorite_file_item_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/share_folder" />

    <CheckBox 
        android:id="@+id/favorite_file_item_share"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:button="@null"
        android:background="@drawable/share_file_item_unselected"
        android:layout_marginRight="10dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        android:layout_toLeftOf="@+id/favorite_file_item_share"
        android:layout_toRightOf="@+id/favorite_file_item_icon"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/favorite_file_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/tv_file_name"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/favorite_file_item_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/tv_file_msg"
            android:textColor="@color/grey"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>
